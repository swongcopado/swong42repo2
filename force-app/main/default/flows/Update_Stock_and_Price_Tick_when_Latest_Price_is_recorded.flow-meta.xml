        </connector>
    </assignments>
    <assignments>
        <name>Calculate_Positive_Price_Difference</name>
        <label>Calculate Positive Price Difference</label>
        <locationX>50</locationX>
        <locationY>455</locationY>
        <assignmentItems>
            <assignToReference>var_PriceDifference</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.Price__c</elementReference>
            </value>
        </assignmentItems>
