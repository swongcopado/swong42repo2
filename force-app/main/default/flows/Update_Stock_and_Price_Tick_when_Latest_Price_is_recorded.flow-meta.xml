    </assignments>
    <decisions>
        <name>Is_Latest_Price_Tick_Price_HIGHER_than_the_Stock_s_Current_Price</name>
        <label>Is Latest Price Tick Price HIGHER than the Stock&apos;s Current Price</label>
        <locationX>314</locationX>
        <locationY>335</locationY>
        <defaultConnector>
            <targetReference>Copy_1_of_Update_Price_Difference_Direction_in_Tick</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>HIGHER</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Price__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>$Record.Stock__r.Current_Price__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Calculate_Positive_Price_Difference</targetReference>
            </connector>
            <label>HIGHER</label>
        </rules>
        <rules>
            <name>LOWER</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Price__c</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <elementReference>$Record.Stock__r.Current_Price__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Calculate_Negative_Price_Difference</targetReference>
            </connector>
            <label>LOWER</label>
        </rules>
    </decisions>
